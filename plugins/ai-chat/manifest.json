{
    "id": "ai-chat",
    "name": "AI Chat",
    "version": "0.1.0",
    "entry": "main.rhai",
    "capabilities": {
        "allow_net": ["api.openai.com", "api.anthropic.com", "localhost", "127.0.0.1"],
        "allow_fs_read": ["."],
        "allow_fs_write": [],
        "allow_env": [
            "AI_BASE_URL",
            "AI_API_KEY",
            "AI_MODEL",
            "AI_MAX_TOKENS",
            "OPENAI_API_KEY",
            "ANTHROPIC_API_KEY"
        ],
        "allow_source_control": true
    }
}
